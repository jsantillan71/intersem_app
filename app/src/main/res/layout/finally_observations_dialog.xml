<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@color/blue_intersem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-condensed-light"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="Servicio No Realizado"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtGuardarCambios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-condensed-light"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="Finalizar"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/black"
            android:text="MOTIVOS:">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_marginLeft="5dp"
            app:boxBackgroundColor="@color/white"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtObservaciones"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="88dp"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/black"
            android:text="SELECIONAR MOTIVO:">
        </TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnNoEstaUnidad"
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/blue_intersem"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/fondoazul"
                android:alpha="0.8"
                android:layout_height="match_parent">

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="NO ESTA LA UNIDAD">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDieronBaja"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="@color/blue_intersem"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/fondoazul"
                android:alpha="0.8"
                android:layout_height="match_parent">

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:text="LO DIERON DE BAJA"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/btnNoDisponible"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="@color/blue_intersem"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/fondoazul"
                android:alpha="0.8"
                android:layout_height="match_parent">

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="NO ESTABA DISPONIBLE">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:id="@+id/btnIncompleto"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="@color/blue_intersem"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/fondoazul"
                android:alpha="0.8"
                android:layout_height="match_parent">

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="ESTABA INCOMPLETO /DESARMADO">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:id="@+id/btnCabms"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="@color/blue_intersem"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/fondoazul"
                android:alpha="0.8"
                android:layout_height="match_parent">

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="SERIE / CABMS NO COINCIDEN">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnNoEnciende"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="@color/blue_intersem"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/fondoazul"
                android:alpha="0.8"
                android:layout_height="match_parent">

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="NO ENCIENDE">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>